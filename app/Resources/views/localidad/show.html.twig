{% extends 'RedesSivelBundle::admin.html.twig' %}
{% block titulo %}Localidades{% endblock %}
{% block body %}

    <table>
        <tbody>
            <tr>
                <th>Nombre del lugar</th>
                <td>{{ localidad.nombreLocalidad }}</td>
            </tr>
            <tr>
                <th>Latitud</th>
                <td>{{ localidad.latitudLocalidad }}</td>
            </tr>
            <tr>
                <th>Longitud</th>
                <td>{{ localidad.longitudLocalidad }}</td>
            </tr>
        </tbody>
    </table><br/>
    <a href="{{ path('admin_localidad_index') }}" class="btn btn-default">Regresar a la lista</a> <br/>
    <a href="{{ path('admin_localidad_edit', { 'id': localidad.id }) }}" class="btn btn-warning">Editar</a> {{ form_start(delete_form) }}<input type="submit" value="Borrar" class="btn btn-danger">{{ form_end(delete_form) }}
{% endblock %}
