{% extends 'base.html.twig' %}

{% block body %}
    <h1>FosGroup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fosGroup.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ fosGroup.name }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% if fosGroup.roles %}{{ fosGroup.roles|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_grupo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_grupo_edit', { 'id': fosGroup.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
